doctype 5
html
	head
		title STUDY TIMER
		meta(charset="utf-8")
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel="preconnect" href="https://fonts.googleapis.com")
		link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
		link(href="https://fonts.googleapis.com/css2?family=Permanent+Marker&family=Tilt+Warp&display=swap" rel="stylesheet")
		
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" )
		
		script(src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous")
		script(src="https://cdn.jsdelivr.net/npm/chart.js")
		script(type="module" src="/javascripts/snow.js")
		script(type="module" src='/javascripts/main.js')
		script(type="module" src='/javascripts/record.js')
		script(type="module" src='/javascripts/timer.js')
		script(type="module" src='/javascripts/sidebar.js')
		script(type="module" src='/javascripts/account_sidebar.js')

	body
		.l_sidebar
				.sidebar-section
					.sidebar-buttons
						#login-button.button
							if isLogined
								i(class="fa-solid fa-right-from-bracket")
								p Logout
								a(href="/auth/logout_process")
							else		 
								i(class="fa-solid fa-right-to-bracket")
								p Google login
								a(href="/auth/google") 
						if isLogined
							#account-button.button.toggle
								i(class="fa-solid fa-user")
								p account
						#statistic-button.button.toggle 
							i(class="fa-solid fa-chart-column")
							p statistics
					.sidebar-main

		.l_container
			.l_header
				#logo
					h1 Study Timer
			
			.l_contents
				.content-wrapper 
					.content-section
						.timer
							p#time 00:00:00
						.timer-button
							//- 타이머 시작 / 중단
							button#start-stop-button start  
							//- 타이머 초기화						
							button#reset-button reset
					.content-section
						.record-title 
							h3 Records
						.record-content
							.record-table-header 
								p started
								p stopped
								p studied
							.record-table-content
								table#record-table 								
		.l_footer
			p copy
			#snowflake-section        


